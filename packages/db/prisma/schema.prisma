generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id @default(uuid())
  username String  @unique
  email    String  @unique
  password String
  rooms    Rooms[]
  chats    Chats[]
}

model Rooms {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  adminId   String
  admin     Users    @relation(fields: [adminId], references: [id])
  chats     Chats[]
}

model Chats {
  id       Int    @id @default(autoincrement())
  content  String
  userId   String
  roomName String
  user     Users  @relation(fields: [userId], references: [id])
  room     Rooms  @relation(fields: [roomName], references: [name])
}
